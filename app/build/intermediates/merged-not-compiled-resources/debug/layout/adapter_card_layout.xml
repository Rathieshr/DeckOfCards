<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:id="@+id/content_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/top_suit_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/spades" />

    <com.rathiesh.deckofcards.ui.TextBold
        android:id="@+id/rank"
        style="@style/SP_TextBoldStyle"
        android:textSize="80sp"
        android:hint="@string/rank"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/bottom_suit_icon"
        android:layout_width="100dp"
        android:layout_gravity="end"
        android:layout_height="100dp"
        android:src="@drawable/spades" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>